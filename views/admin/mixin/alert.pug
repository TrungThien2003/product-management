mixin allert-error(time)
 -if(messages.error)
   .message.info 
   div(
    class="alert alert-danger"
    show-alert
    data-time=time
   ) #{messages.error} <span close-allert> X </span>

mixin alert-success(time)
 -if(messages.success)
   .message.info 
   div(
    class="alert alert-success"
    show-alert
    data-time=time
   ) #{messages.success} <span close-allert> x </span>