extends ../../layouts/default.pug
include ../../mixins/boxhead.pug 

block main
    .container.my-3     
        .row    
            .col-12 
                +box-head("Trang danh sach san pham")
        .row 
            each item in products   
             .col-4.mb-3     
                .product-item   
                    .inner-image 
                      a(href=`/product/detail/${item.slug}`)
                        img(src=item.thumbnail)   
                    .inner-content  
                        h3.inner-title #{item.title}
                         .inner-price-new #{item.priceNew}$
                         .inner-price-old #{item.price}$
                         .inner-discount -#{item.discountPercentage}%